<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:baselineAligned="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="@dimen/default_margin"
    tools:context=".MainActivity">
    
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/default_margin"
        android:layout_weight="1">

        <dbuhler.stitcher.FitImageView
            android:background="@drawable/background"
            android:id="@+id/image_view_left"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            android:orientation="horizontal">

            <ImageButton
                android:contentDescription="@string/button_browse"
                android:id="@+id/button_browse_left"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:onClick="buttonBrowse_Click"
                android:scaleType="center"
                android:src="@mipmap/ic_action_browse"/>

            <ImageButton
                android:contentDescription="@string/button_camera"
                android:id="@+id/button_camera_left"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:onClick="buttonCamera_Click"
                android:scaleType="center"
                android:src="@mipmap/ic_action_camera"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/default_margin"
        android:layout_weight="1">

        <dbuhler.stitcher.FitImageView
            android:background="@drawable/background"
            android:id="@+id/image_view_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_margin"
            android:orientation="horizontal">

            <ImageButton
                android:contentDescription="@string/button_browse"
                android:id="@+id/button_browse_right"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:onClick="buttonBrowse_Click"
                android:scaleType="center"
                android:src="@mipmap/ic_action_browse"/>

            <ImageButton
                android:contentDescription="@string/button_camera"
                android:id="@+id/button_camera_right"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:onClick="buttonCamera_Click"
                android:scaleType="center"
                android:src="@mipmap/ic_action_camera"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>